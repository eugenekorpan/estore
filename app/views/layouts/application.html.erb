<!DOCTYPE html>
<html>
  <head>
    <title>Estore</title>
    <%= stylesheet_link_tag 'main', 'bootstrap' %>
    <%= javascript_include_tag :defaults, 'bootstrap.min' %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <%= render :partial => 'shared/user_navigation.html' %>
    <% if notice %>
      <p class="alert alert-succes"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <div class="container content">
      <div class="row">
        <div class="span12">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
